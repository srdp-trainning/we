/* pages/timetable/timetable.wxss */
.container{
  /* display: block; */
}
.words{
  font-size: 30rpx;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
}
.editImage{
  width: 26rpx;
}
.mainer-title-x-list{
  display: flex;
  height: 80rpx;
  border-bottom: 1rpx solid rgba(204,204,204,1);
}
.mainer-title-x-list .month{
  font-size: 26rpx;
  width: 64rpx;
  
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid rgba(204,204,204,1);
}
.mainer-title-x-list .month text{
  display: inline-block;
  width: 24rpx;
  text-align: center;
}
.mainer-title-x-list .everyday{
  width: 97rpx;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.mainer-title-x-list .everyday text{
  display: block;
}
.mainer-title-x-list .everyday text:nth-child(1){
  font-size: 24rpx;
}
.mainer-title-x-list .everyday text:nth-child(2){
  font-size: 16rpx;
}
.mainer-title-y-list{
  width: 64rpx;
  float: left;
}
.mainer-title-y-list view{
  font-size: 26rpx;
  width: 64rpx;
  height: 120rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid rgba(204,204,204,1);
}
.mainer-content{
  width: 685rpx;
  float: left;
  min-height: 900rpx;
  position: relative;
}
.course-item{
  position: absolute;
  width:94rpx;
  height:240rpx;
  
  background:rgba(241,161,213,1);
  box-shadow:0rpx 4rpx 4rpx 0rpx rgba(0, 0, 0, 0.1);
  border-radius:10rpx;
  font-size:20rpx;
  color: white;
  /* padding: 13rpx; */
  /* margin-left: 6rpx; */
  /* margin-top: 6rpx; */
  display: flex;
  justify-content: center;
  /* justify-content: flex-start; */
  align-items: center;
  flex-direction: column;

}
.course-item > text{
  /* display: block; */
  width: 67rpx;
}